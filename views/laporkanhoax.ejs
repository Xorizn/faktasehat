      style="background-image: url('https://web.komdigi.go.id/resource/ZHJ1cGFsLzVfMTMuanBn')"
    >
      <div class="container">
        <div class="row">
          <div class="col-lg-8 offset-lg-2">
            <h1>Laporkan Hoaks</h1>
            <ul class="breadcrumb">
              <li>
                <a href="/"><i class="fas fa-home"></i> Home</a>
              </li>
              <li class="active">Laporkan Hoaks</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- End Breadcrumb -->

    <!-- Start Contact Area
    ============================================= -->

    <div class="contact-area default-padding">
      <div class="container">
        <div class="contact-items">
          <div class="">
            <section id="laporkan" class="laporkan-card pad">
              <h2 class="mb-0">Laporkan Hoaks</h2>
              <p class="muted mt-1">
                Bantu kami memprioritaskan klaim berdampak tinggi.
              </p>
              <form onsubmit="submitReport(event)">
                <div class="grid col-2">
                  <div>
                    <label>Tipe konten</label>
                    <select id="r-type" required>
                      <option value="teks">Teks</option>
                      <option value="gambar">Gambar</option>
                      <option value="video">Video</option>
                      <option value="tautan">Tautan</option>
                    </select>
                  </div>
                  <div>
                    <label>Platform</label>
                    <select id="r-platform" required>
                      <option>WhatsApp</option>
                      <option>Instagram</option>
                      <option>TikTok</option>
                      <option>Facebook</option>
                      <option>X (Twitter)</option>
                      <option>YouTube</option>
                      <option>Blog/Website</option>
                    </select>
                  </div>
                </div>
                <label for="r-url">URL sumber (opsional)</label>
                <input id="r-url" type="url" placeholder="https://…" />
                <label for="r-file">Upload tangkapan layar (opsional)</label>
                <input id="r-file" type="file" accept="image/*" />
                <label for="r-desc">Deskripsi singkat</label>
                <textarea
                  id="r-desc"
                  required
                  placeholder="Ringkas isi klaim, kapan/di mana beredar"
                ></textarea>
                <div class="grid col-2">
                  <div>
                    <label for="r-loc">Lokasi/komunitas (opsional)</label>
                    <input
                      id="r-loc"
                      type="text"
                      placeholder="Denpasar, PKK, sekolah…"
                    />
                  </div>
                  <div>
                    <label for="r-lang">Bahasa/daerah (opsional)</label>
                    <input
                      id="r-lang"
                      type="text"
                      placeholder="Indonesia, Bali, Hokkien…"
                    />
                  </div>
                </div>
                <label
                  ><input type="checkbox" required /> Saya setuju dengan
                  kebijakan privasi (data akan dianonimkan).</label
                >
                <label
                  ><input id="r-notif" type="checkbox" /> Kirim notifikasi hasil
                  verifikasi ke email saya</label
                >
                <div class="row">
                  <button class="btn warn" type="submit">Kirim laporan</button>
                  <div class="muted">
                    Setelah submit: Anda mendapat nomor tiket & estimasi proses
                    (secepat mungkin; prioritas dampak tinggi).
                  </div>
                </div>
              </form>

              <div class="laporkan-form-card mt-3">
                <b>Sebelum share, 3 langkah cek sehat:</b>
                <ol>
                  <li>Periksa sumber (ada BPOM/izin/rujukan?)</li>
                  <li>
                    Bandingkan minimal 2 sumber kredibel (WHO/BPOM/Kemenkes).
                  </li>
                  <li>
                    Tanyakan konsekuensi jika salah (menunda terapi, efek
                    samping).
                  </li>
                </ol>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
