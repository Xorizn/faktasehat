  <style>
    :root {
      --bg: #0b1020;          /* deep blue-ish */
      --card: #111831;
      --muted: #9fb0d3;
      --text: #e7eeff;
      --accent: #71b7ff;      /* soft blue */
      --good: #2ea44f22;      /* soft greens */
      --bad: #ff4d4d22;       /* soft red */
      --warn: #ffb02022;      /* soft amber */
      --info: #2ea8ff22;      /* soft blue info */
      --neutral: #b5b5b522;
      --radius: 18px;
      --shadow: 0 10px 30px rgba(0,0,0,.25);
    }
    * { box-sizing: border-box }
    html, body { margin:0; padding:0; font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Inter, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji"; background: var(--bg); color: var(--text); }
    a { color: var(--accent); text-decoration: none }
    a:hover { text-decoration: underline }
    .container { width: min(1200px, 92vw); margin: 0 auto }
    header { position: sticky; top:0; z-index: 30; backdrop-filter: blur(10px); background: rgba(11,16,32,.72); border-bottom: 1px solid #1b2547 }
    .nav { display:flex; gap: 18px; align-items:center; justify-content: space-between; padding: 14px 0 }
    .brand { display:flex; gap:10px; align-items:center; font-weight: 700 }
    .brand .logo { width:34px; height:34px; border-radius:10px; background: linear-gradient(140deg, #71b7ff, #b0ffa4); display:grid; place-items:center; color:#0b1020; font-weight:900 }
    nav ul { display:flex; flex-wrap: wrap; gap: 12px; list-style:none; padding:0; margin:0 }
    nav a { padding:8px 12px; border-radius: 10px; }
    nav a:hover { background: #121a35 }
    .btn { display:inline-flex; align-items:center; justify-content:center; gap:8px; background: #1a2448; color: var(--text); padding: 10px 14px; border-radius: 12px; border:1px solid #263061; box-shadow: var(--shadow); cursor:pointer }
    .btn:hover { background:#1d2952 }
    .btn.primary { background: linear-gradient(180deg, #79c2ff, #5aa8ff); color:#0b1020; border: none }
    .btn.good { background: #1f3a2b; border:1px solid #2fa36a }
    .btn.warn { background: #3a2f1f; border:1px solid #e0a74f }

    /* Sections */
    section { padding: clamp(36px, 5vw, 72px) 0 }
    .card { background: var(--card); border: 1px solid #1a2448; border-radius: var(--radius); box-shadow: var(--shadow) }
    .grid { display:grid; gap: 16px }
    .grid.col-2 { grid-template-columns: repeat(2, minmax(0,1fr)) }
    .grid.col-3 { grid-template-columns: repeat(3, minmax(0,1fr)) }
    .grid.col-4 { grid-template-columns: repeat(4, minmax(0,1fr)) }
    @media (max-width: 960px){ .grid.col-3, .grid.col-4 { grid-template-columns: repeat(2, minmax(0,1fr)) } }
    @media (max-width: 640px){ .grid.col-2, .grid.col-3, .grid.col-4 { grid-template-columns: 1fr } }

    /* Hero */
    .hero { display:grid; gap: 18px; align-items:center; grid-template-columns: 1.4fr 1fr }
    .hero .left { display:grid; gap:18px }
    .hero h1 { font-size: clamp(28px, 4.5vw, 44px); line-height:1.1; margin:0 }
    .muted { color: var(--muted) }
    .searchbar { display:flex; background: #0e1533; border:1px solid #263061; border-radius: 16px; overflow:hidden }
    .searchbar input { all:unset; padding: 14px 16px; flex:1 }
    .searchbar button { border:0; background: transparent; padding: 8px; margin: 6px; border-radius: 10px }
    .searchbar button:hover { background: #17224b }
    .pills { display:flex; gap:8px; flex-wrap: wrap }
    .pill { background:#121a35; border:1px solid #263061; border-radius: 999px; padding: 6px 10px; font-size: 13px; color: var(--muted) }

    /* Status badges */
    .badge { display:inline-flex; align-items:center; gap:8px; padding: 6px 10px; border-radius: 999px; font-weight:600; font-size: 13px; letter-spacing:.2px; border:1px solid #263061 }
    .badge.true { background: var(--good); color:#9af5b7; border-color:#2fa36a33 }
    .badge.false { background: var(--bad); color:#ff9a9a; border-color:#ff4d4d33 }
    .badge.misleading { background: var(--warn); color:#ffd38a; border-color:#ffb02033 }
    .badge.context { background: var(--neutral); color:#cfd6ea; border-color:#6373a733 }
    .badge.insufficient { background: var(--info); color:#a3d6ff; border-color:#2ea8ff33 }

    /* Cards */
    .item { padding:16px; display:grid; gap:12px }
    .item h3 { margin:0; font-size: 18px }
    .item .meta { display:flex; justify-content: space-between; align-items:center; gap:10px; color: var(--muted); font-size: 13px }
    .item .actions { display:flex; gap:8px; align-items:center; flex-wrap:wrap }

    /* Pyramid */
    .pyramid { display:grid; gap:8px; align-items:end; justify-items:center }
    .pyramid .lvl { width: 100%; max-width: 560px; height:46px; display:grid; place-items:center; border-radius: 8px; border:1px dashed #2a3767 }
    .pyramid .lvl:nth-child(1){ background:#183152 }
    .pyramid .lvl:nth-child(2){ background:#152b48 }
    .pyramid .lvl:nth-child(3){ background:#12263f }
    .pyramid .lvl:nth-child(4){ background:#102137 }
    .pyramid .lvl:nth-child(5){ background:#0e1d31 }
    .pyramid small { color: var(--muted) }

    /* Filters */
    .filters { display:flex; flex-wrap:wrap; gap:8px }
    .select, .input { background:#0e1533; border:1px solid #263061; border-radius: 10px; color: var(--text); padding:10px 12px }
    .select { appearance:none }

    /* Forms */
    form { display:grid; gap:12px }
    label { font-size: 14px; color: var(--muted) }
    input[type="text"], input[type="email"], input[type="url"], textarea, select { background:#0e1533; border:1px solid #263061; border-radius: 12px; color: var(--text); padding:12px }
    textarea { min-height: 120px; resize: vertical }
    input[type="file"] { color: var(--muted) }

    /* Table-ish */
    .stats { display:grid; grid-template-columns: repeat(4, minmax(0,1fr)); gap:12px }
    .stat { padding:14px; border-radius: 14px; background:#101735; border:1px solid #1e2a57 }
    .stat b { font-size: 22px }
    @media (max-width: 800px){ .stats { grid-template-columns: repeat(2, minmax(0,1fr)) } }

    /* Footer */
    footer { padding: 40px 0; border-top:1px solid #1b2547; background: #0a0f1f }

    /* Modal */
    dialog { width: min(760px, 92vw); border:1px solid #263061; border-radius: 16px; padding:0; background: var(--card); color:var(--text) }
    dialog::backdrop { background: rgba(0,0,0,.55) }
    .modal-head { display:flex; align-items:center; justify-content: space-between; padding:14px 16px; border-bottom:1px solid #1e2a57 }
    .modal-body { padding:16px; display:grid; gap:12px }

    /* Utility */
    .row { display:flex; gap: 12px; flex-wrap: wrap; align-items:center }
    .center { text-align:center }
    .mt-1{ margin-top:6px } .mt-2{ margin-top:12px } .mt-3{ margin-top:18px } .mt-4{ margin-top:24px }
    .mb-0{ margin-bottom:0 }
    .pad { padding: 16px }
  </style>
</head>
